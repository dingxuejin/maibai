}

.chakanall {
  font-size: 30rpx;
  color: #999;
  padding: 20rpx;
  font-weight: 600;
  margin: 50rpx 0;
  border-bottom: 20rpx solid #ccc;
}

#detail {
  padding: 30rpx;
}

.detail-caption {
  border: 2rpx solid #333;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}

.detail-hr {
  width: 200rpx;
  height: 2rpx;
  background: #ccc;
}

.detail-img {
  margin: 50rpx 0;
}

#detail-tarbar {
  box-sizing: border-box;
  border-top: 2rpx solid #ccc;
  height: 10vh;
  background: #fff;
  padding: 0 30rpx;
}

.taricon {
  width: 50rpx;
  height: 50rpx;
}

.tariconbtn {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx #ccc dotted;
  background: transparent;
  overflow: hidden;
  padding:0;
  box-sizing: content-box;
}

.tariconbtn::after {
  border: none;
}

.tarbutton {
  background: #f00;
  color: #fff;
  border-radius: 6rpx;
  width:280rpx;
}

.zhiding {
  width: 90rpx;
  height: 90rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  position: fixed;
  right: 10rpx;
  bottom: 200rpx;
}

.zhiding1 {
  width: 50%;
  height: 50%;
}

.dialog {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 0;
  left: 0;
}

.dialog-container {
  width: 100%;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
}

.close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  border: 2rpx dotted #333;
  width: 32rpx;
  height: 32rpx;
  z-index: 2;
}

