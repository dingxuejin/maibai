}

.caption-icon {
  width: 36rpx;
  height: 36rpx;
}

.text-through {
  text-decoration: line-through;
}

.pinglun-enter {
  width: 12rpx;
  height: 24rpx;
  padding-left: 20rpx;
}

.pinglun-caption {
  font-size: 28rpx;
  color: #333;
}

.pinglun-header {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #ccc;
}

.headerimage {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.pinglun-user {
  color: #333;
  font-size: 28rpx;
  padding: 50rpx 30rpx;
}

.pinglun-date {
  font-size: 22rpx;
